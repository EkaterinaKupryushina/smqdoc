@using MvcFront.Helpers
@using Telerik.Web.Mvc.UI
@{
    UICulture = "ru-RU";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @*<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>*@
    @(Html.Telerik().StyleSheetRegistrar()
                      .DefaultGroup(group => group
                          .Add("telerik.common.css")
                          .Add("telerik.vista.min.css")
                          .Combined(true)
                          .Compress(true))
                     )
    @(Html.Telerik().ScriptRegistrar()
                     .DefaultGroup(group => group
                     .Add("telerik.all.min.js")
                     .Compress(true))
    )
    <script src="@Url.Content("~/Scripts/jquery.watermark.min.js")" type="text/javascript"> </script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    СМК</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Домой", "Index", "Home")</li>
                    @{
                        var sessState = SessionHelper.GetUserSessionData(Session);
                        if (sessState != null)
                        {
                            switch (sessState.UserType)
                            {
                                case SmqUserProfileType.Systemadmin:
                                    <li>@Html.ActionLink("Пользователи", "Index", "UserAccountList")</li>
                                    <li>@Html.ActionLink("Группы", "Index", "UserGroupList")</li>
                                    <li>@Html.ActionLink("Шаблоны", "Index", "DocTemplateList")</li>
                                    <li>@Html.ActionLink("Профиль пользователя", "Index", "Account")</li>
                                    break;
                                case SmqUserProfileType.Groupmanager:
                                    <li>@Html.ActionLink("Профиль пользователя", "Index", "Account")</li>
                                break;
                                case SmqUserProfileType.Groupuser:
                                    <li>@Html.ActionLink("Профиль пользователя", "Index", "Account")</li>
                                    <li>@Html.ActionLink("Документы", "Index", "UserDocument")</li>
                                break;
                                case SmqUserProfileType.User:
                                    <li>@Html.ActionLink("Профиль пользователя", "Index", "Account")</li>
                                   break;
                                case SmqUserProfileType.Anonymous:
                                   break;
                                default:
                                   throw new ArgumentOutOfRangeException();
                            }
                        }
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
