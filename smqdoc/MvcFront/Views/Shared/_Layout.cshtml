@using MvcFront.Enums
@using MvcFront.Helpers
@using Telerik.Web.Mvc.UI
@{
    UICulture = "ru-RU";
}
<!DOCTYPE html>
<html lang="en-US">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @*<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>*@
    @(Html.Telerik().StyleSheetRegistrar()
                      .DefaultGroup(group => group
                          .Add("telerik.common.css")
                          .Add("telerik.vista.min.css")
                          .Combined(true)
                          .Compress(true))
                     )
    @(Html.Telerik().ScriptRegistrar()
                     .DefaultGroup(group => group
                     .Add("telerik.all.min.js")
                             .Compress(true))
                             .Globalization(true)
    )
    <script src="@Url.Content("~/Scripts/jquery.watermark.min.js")" type="text/javascript"> </script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    Система Менеджмента Качества</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                 @*   <li>@Html.ActionLink("Домой", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Профиль", "Index", "Account")</li>
                    @{
                        var sessState = SessionHelper.GetUserSessionData(Session);
                        if (sessState != null)
                        {
                            switch (sessState.UserType)
                            {
                                case UserProfileTypes.Systemadmin:
                                    <li>@Html.ActionLink("Пользователи", "Index", "UserAccountList")</li>
                                    <li>@Html.ActionLink("Группы", "Index", "UserGroupList")</li>
                                    <li>@Html.ActionLink("Формы", "Index", "DocTemplateList")</li>
                                   break;
                                case UserProfileTypes.Groupmanager:
                                    <li>@Html.ActionLink("Формы группы", "Index", "GroupDocAppointment")</li>
                                   @* <li>@Html.ActionLink("Документы группы", "GroupDocumentsList", "DocumentAppointment",new {id=0},null)</li>*@
                                   break;
                                case UserProfileTypes.Groupuser:
                                    <li>@Html.ActionLink("Документы", "Index", "UserDocument")</li>
                                    <li>@Html.ActionLink("Документы для заполнения", "UserDocAppointments", "UserDocument")</li>    
                                   break;
                                case UserProfileTypes.User:
                                   break;
                                case UserProfileTypes.Anonymous:
                                   break;
                                default:
                                   throw new ArgumentOutOfRangeException();
                            }
                        }
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
