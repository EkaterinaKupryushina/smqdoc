@using Telerik.Web.Mvc.UI
@using MvcFront.Models
@model IEnumerable<GroupTemplateListViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Связи групп пользователей системы и шаблонов документов</h2>

@Html.ActionLink("Добавить связь", "Create")
@(Html.Telerik().Grid(Model)
        .Name("GroupTemplateGrid")
                   .Columns(columns =>
                   {
                       columns.AutoGenerate(column =>
                       {
                           column.Width = "150px";
                           if (column.Member == "ID" )
                               column.Visible = false;
                       });
                       columns.Command(command =>
                       {                           
                           command.Custom("DeleteDetails").Text("Удалить")
                            .DataRouteValues(route => route.Add(o => o.ID).RouteKey("id"))
                            .Action("Delete", " DocTemplateList")
                            .HtmlAttributes(new { style = "text-align: center" });                         
                       }).Width(50);
                   })
                 .Sortable()
                .Pageable()

    ) 
